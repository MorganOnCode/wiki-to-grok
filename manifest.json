{
  "manifest_version": 3,
  "name": "Wiki to Grok",
  "version": "1.0.0",
  "description": "Redirect Wikipedia articles to Grokipedia for AI-enhanced summaries",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage"
  ],
  "action": {
    "default_title": "Wiki to Grok - Click to toggle"
  },
  "host_permissions": [
    "*://*.wikipedia.org/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "wikipedia_redirect",
      "enabled": true,
      "path": "rules/redirect_rules.json"
    }]
  },
  "background": {
    "service_worker": "background.js"
  }
}
